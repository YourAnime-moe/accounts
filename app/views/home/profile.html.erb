<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container restricted has-text-centered">
      <%= avatar_tag(size: 300, no_margin_top: true) %>
      <h1 class="title is-size-3">Welcome back, <%= current_user.name %></h1>
      <%= inactive_notification %>
      <h1 class="is-size-5 has-text-grey-light">Manage your account details here. You are in control.</h1>

      <div class="action-cards">
        <div class="columns">
          <div class="column is-6">
            <%= render partial: 'home/action_card', locals: {
              title: 'Share and view your Nintendo Switch clips',
              description: 'Want to show off some skills or simply see what other people are made of? Check out Misete.io!',
              link_text: 'Go to Misete.io',
              link_path: Rails.configuration.x.hosts[:naka].join('auth/misete').to_s,
              new_tab: true,
            } %>
          </div>
          <div class="column is-6">
            <%= render partial: 'home/action_card', locals: {
              title: 'Your account',
              description: 'You have control over which information you wish to expose. You can also keep track of all authorized applications.',
              link_text: 'Account details',
              link_path: my_account_path,
            } %>
          </div>
        </div>
        <div class="columns">
          <div class="column is-6">
            <%= render partial: 'home/action_card', locals: {
              title: 'Your sessions',
              description: 'Your will be asked for your permission to use your account details upon logging in. See all sessions here.',
              link_text: 'View authorized apps',
              link_path: oauth_authorized_applications_path,
            } %>
          </div>
          <div class="column is-6">
            <%= render partial: 'home/action_card', locals: {
              title: 'Logout',
              description: 'This will end all active sessions on Misete.io. This means that all accounts will be disconnected on this computer.',
              link_text: 'Logout',
              link_path: logout_path,
              link_method: :delete,
            } %>
          </div>
        </div>
        <% if current_user.admin? %>
          <div class="columns">
            <div class="column is-6">
              <%= render partial: 'home/action_card', locals: {
                title: 'OAuth Applications',
                description: 'Manage all OAuth applications that are authorized to interact with Misete.io.',
                link_text: 'View all applications',
                link_path: oauth_applications_path,  
              } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
