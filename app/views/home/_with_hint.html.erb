<p class="subtitle">Please enter your password to login</p>
<div class="box">
  <figure class="avatar is-128x128">
    <img src="https://www.misete.io/logo.png">
  </figure>
  <form>
    <div class="field">
      <div class="control">
        <div class="level">
          <div class="level-left">
            <%= account.email %>
          </div>
          <div class="level-right">
            <%= link_to('Change', change_email_path, method: :post) %>
          </div>
        </div>
        <input class="input is-large" type="password" placeholder="Your Password">
        <span class="help has-text-danger">Your password is invalid. Please try again.</span>
      </div>
    </div>
    <div class="field">
      <label class="checkbox">
        <input type="checkbox">
        Remember me
      </label>
    </div>
    <button id="login" class="button is-block is-info is-large is-fullwidth">Login</button>
  </form>
</div>
