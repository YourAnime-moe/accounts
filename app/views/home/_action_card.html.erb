<% link_method = nil unless defined?(link_method) %>
<% new_tab = false unless defined?(new_tab) %>

<div class="card">
  <div class="card-content">
    <div class="content">
      <h1 class="title is-size-4"><%= title %></h1>
      <span><%= description %></span>
    </div>
  </div>
  <footer class="card-footer">
    <%= link_to(
          link_text,
          link_path, 
          method: link_method, 
          class: 'card-footer-item', 
          target: (new_tab ? '_blank' : nil)) %>
  </footer>
</div>