<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title">Sign up for a new account</h3>
        <hr class="login-hr">

        <%= form_for(@user, as: :user, url: :signup) do |f| %>
          <%= field_control do %>
            <input value="<%= current_application&.uuid %>" type="hidden" name="app_id" id="app_id" />
            <div class="columns">
              <div class="column">
                <%= f.label :first_name, class: 'label' %>
                <%= f.text_field :first_name, class: 'input is-medium', autocomplete: :off %>
              </div>
              <div class="column">
                <%= f.label :last_name, class: 'label' %>
                <%= f.text_field :last_name, class: 'input is-medium', autocomplete: :off %>
              </div>
            </div>
          <% end %>
          <%= field_control do %>
            <%= f.label :email, 'Email address', class: 'label' %>
            <%= f.text_field :email, class: 'input is-medium', autocomplete: :off %>
            <p class="help">This email address must not be associated to any account on the system.</p>
          <% end %>
          <%= field_control do %>
            <%= f.label :username, 'Your new username', class: 'label' %>
            <%= f.text_field :username, class: 'input is-medium', autocomplete: :off %>
            <p class="help">You must choose a unique username. Nothing rude please!</p>
          <% end %>
          <%= field_control do %>
            <%= f.label :password, 'Enter a new password', class: 'label' %>
            <%= f.password_field :password, class: 'input is-medium' %>
            <p class="help">Password strength indicator coming soon.</p>
            <progress class="is-hidden progress is-small is-primary" style="margin-top: 10px" value="0" max="100">0%</progress>
          <% end %>

          <%= f.submit('Create my account!', class: 'button is-primary is-medium is-fullwidth') %>
        <% end %>

        <p class="has-text-grey is-hidden">
          <a href="../">Sign Up</a> &nbsp;·&nbsp;
          <a href="../">Forgot Password</a> &nbsp;·&nbsp;
          <a href="../">Need Help?</a>
        </p>
      </div>
    </div>
  </div>
</section>
