<section class="hero is-fullheight">
  <div class="hero-body">
    
    <div class="container has-text-centered">
      <%= avatar_tag(size: 300) %>
      <h1 class="title is-size-3">Account details</h1>
      <nav class="breadcrumb is-centered has-succeeds-separator" aria-label="breadcrumbs">
        <ul>
          <li><a href="/">Home page</a></li>
          <li class="is-active"><a href="#" aria-current="page">My account</a></li>
        </ul>
      </nav>
      <h1 class="is-size-5 has-text-grey-light">You can edit your name, username and password here.</h1>

      <%= form_for(current_user, as: :user, url: :my_account, method: :patch, html: { style: 'padding-top: 2rem;' }) do |f| %>
        <div class="columns">
          <div class="column is-6">
            <%= field_control do %>
              <%= f.label :first_name, 'Your first name', class: 'label' %>
              <%= f.text_field :first_name, class: 'input' %>
            <% end %>
            <%= field_control do %>
              <%= f.label :last_name, 'Your last name', class: 'label' %>
              <%= f.text_field :last_name, class: 'input' %>
            <% end %>
          </div>
          <div class="column is-6">
            <%= field_control do %>
              <%= f.label :email, 'Your email address', class: 'label' %>
              <%= f.text_field :email, class: 'input' %>
            <% end %>
            <%= field_control do %>
              <%= f.label :username, 'Your username', class: 'label' %>
              <%= f.text_field :username, class: 'input' %>
            <% end %>
          </div>
        </div>

        <%= f.submit 'Submit account changes', class: 'button is-success' %>
      <% end %>
    </div>
  </div>
</section>

